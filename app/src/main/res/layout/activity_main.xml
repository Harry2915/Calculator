<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#272626"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#FFF"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/seven"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/eight"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/nine"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>


        <Button
            android:id="@+id/div"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="/"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/four"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/five"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/six"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>




        <Button
            android:id="@+id/mult"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="*"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/one"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/two"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/three"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>



        <Button
            android:id="@+id/minus"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/C"
            android:background="@drawable/btnback"
            android:layout_width="0dp"
            android:onClick="ButtonClick"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="C"
            android:layout_margin="5dp"
            android:textColor="#F80505"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/zero"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/dot"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>





        <Button
            android:id="@+id/add"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:weightSum="1">
        <Button
            android:id="@+id/equal"
            android:background="@drawable/btnback"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:layout_margin="5dp"
            android:textSize="30dp">

        </Button>
    </LinearLayout>

</LinearLayout>